<!DOCTYPE configuration SYSTEM "conf/server.dtd">
<configuration watchdog="1">
	<internal>
		<!--driver>org.hsqldb.jdbcDriver</driver-->
		<!--url>jdbc:hsqldb:file:/home/reha/temp/internaldb</url-->
		<driver>org.postgresql.Driver</driver>
		<url>jdbc:postgresql:internal?user=jsnap&amp;password=passw0rd</url>
		<pool>20</pool>
		<idle>600</idle>
	</internal>
	<databases>
		<database name="postgres">
			<driver>org.jsnap.db.Postgres</driver>
			<url>jdbc:postgresql:jsnapdev?user=jsnap&amp;password=passw0rd</url>
			<pool>20</pool>
			<idle>600</idle>
			<initial>60</initial>
			<increment>30</increment>
			<multiplier>0</multiplier>
			<login>org.jsnap.security.Authenticate</login>
			<accesscontrol>org.jsnap.security.AllowAll</accesscontrol>
		</database>
		<database name="hsqldb">
			<driver>org.hsqldb.jdbcDriver</driver>
			<url>jdbc:hsqldb:file:/home/reha/temp/internaldb</url>
			<pool>20</pool>
			<idle>600</idle>
			<initial>60</initial>
			<increment>30</increment>
			<multiplier>0</multiplier>
			<login>org.jsnap.security.Authenticate</login>
			<accesscontrol>org.jsnap.security.AllowAll</accesscontrol>
		</database>
	</databases>
	<listeners>
        <!-- Web Console -->
        <listener>
          <port>8080</port>
          <backlog>5</backlog>
          <accepts>org.jsnap.http.WebConsoleRequest</accepts>
        </listener>
        <listener>
          <port>8090</port>
          <backlog>5</backlog>
          <accepts>org.jsnap.http.PasswordRenewalRequest</accepts>
        </listener>
		<listener>
			<port>52660</port>
			<backlog>100</backlog>
			<accepts>org.jsnap.request.SizePackedRequest</accepts>
		</listener>
		<listener>
			<port>52661</port>
			<backlog>100</backlog>
			<accepts>org.jsnap.request.HttpRequest</accepts>
		</listener>
		<listener>
			<port>52662</port>
			<backlog>100</backlog>
			<accepts>org.jsnap.request.SizePackedSecureRequest</accepts>
		</listener>
		<listener>
			<port>52663</port>
			<backlog>100</backlog>
			<accepts>org.jsnap.request.SSLRequest</accepts>
		</listener>
	</listeners>
	<workers>
		<core>0</core>
		<max>100</max>
		<idle>300</idle>
	</workers>
	<keystore>
		<url>conf/jsnap.keystore</url>
		<password>passw0rd</password>
	</keystore>
</configuration>
